<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_eraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/brush_256"
        colorpicker:elevation="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/color_picker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/brush_eraser"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/palette_256"
        colorpicker:elevation="16dp" />

    <FrameLayout
        android:id = "@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

